<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <mvc:annotation-driven/>
    <context:component-scan base-package="fr.epsi.tp.redtweet"/>

    <bean id="userService"
          name="userService"
          class="fr.epsi.tp.redtweet.service.impl.UserServiceImpl"
          autowire="byName"
          scope="singleton">
    </bean>

    <bean id="userDao"
          name="userDao"
          class="fr.epsi.tp.redtweet.dao.impl.UserDaoImpl"
          autowire="byName"
          scope="singleton">
    </bean>

    <bean id="tweetService"
          name="tweetService"
          class="fr.epsi.tp.redtweet.service.impl.PublicRedServiceImpl"
          autowire="byName"
          scope="singleton">
    </bean>

    <bean id="tweetDao"
          name="tweetDao"
          class="fr.epsi.tp.redtweet.dao.impl.TweetDaoImpl"
          autowire="byName"
          scope="singleton">
    </bean>

</beans>